<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back1"
    tools:context="com.example.bharatjain.minesweeper.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/intermediate"
        android:layout_width="168dp"
        android:layout_height="48dp"
        android:background="@android:color/black"
        android:onClick="buttonClicked"
        android:text="intermediate"
        android:textColor="@android:color/white"
        android:textSize="17dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/beginner" />

    <Button
        android:id="@+id/advanced"
        android:layout_width="168dp"
        android:layout_height="48dp"
        android:background="@android:color/black"
        android:onClick="buttonClicked"
        android:text="advanced"
        android:textColor="@android:color/white"
        android:textSize="17dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/intermediate"
        app:layout_constraintHorizontal_bias="0.502" />

    <Button
        android:id="@+id/beginner"
        android:layout_width="168dp"
        android:layout_height="48dp"
        android:background="@android:color/black"
        android:onClick="buttonClicked"
        android:text="beginner"
        android:textColor="@android:color/white"
        android:textSize="17dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="51dp"
        app:layout_constraintTop_toBottomOf="@+id/score" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:textSize="40dp"
        android:text="Minesweeper"
        android:textColor="#00C2FD"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="73dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="231dp"
        android:layout_height="99dp"
        app:srcCompat="@drawable/home"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.503" />

    <TextView
        android:id="@+id/scoretitle"
        android:layout_width="149dp"
        android:layout_height="40dp"
        android:textSize="30dp"
        android:text="High Score"
        android:textColor="@android:color/black"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.502" />

    <TextView
        android:id="@+id/score"
        android:layout_width="63dp"
        android:layout_height="27dp"
        android:textSize="25dp"
        android:text="--:--"
        android:textColor="@android:color/black"
        android:gravity="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/scoretitle" />

</android.support.constraint.ConstraintLayout>
